<div class="wrapper_with_padding">
    <div id="docs.clearfix">
    
    <% unless @docs.blank? %>
        <% @docs.each do |doc| %>
            <a href=<%= url_for(doc) %>>
            <div class="doc">
                <div class="doc">
                    <p class="title"><%= doc.title %></p>
                    <p class="date"><%= time_ago_in_words(doc.created_at) %></p>
                    <p class="content"><%= truncate(doc.content, length:35) %></p>
                </div>
            </div>
            </a>
        <% end %>
    <% else %>
        <h2> Your Binder is Empty!</h2>
        <button><%= link_to "Create Doc", new_doc_path %> </button>
     <% end %>
    </div>
</div>


