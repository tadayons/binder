<div class="wrapper_with_padding">
    <% unless @notes.blank? %>
        <% @notes.each do |note| %>
            <a href=<%= url_for(note) %>>
                <div class="note">
                    <p class="title"><%= note.title %></p>
                    <p class="date">Created <%= time_ago_in_words(note.created_at) %> ago</p>
                    <p class="content"><%= truncate(note.content, length:50)%></p>
                </div>
            </a>
        <% end %>
    <% else %>
        <h2> Your Binder is Empty!</h2>
        <button><%= link_to "Create Note", new_note_path %> </button>
     <% end %>
</div>


